{
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true
  },
  "plugins": [
    "no-async-without-await"
  ],
  "rules": {
    "no-async-without-await/no-async-without-await": 1,
    "max-len": [
      2,
      120,
      8
    ],
    "space-before-function-paren": [
      0,
      "always"
    ],
    "yoda": [
      0,
      "always"
    ]
  }
}
